
<section id="portfolio">
  
  <h4>&nbsp;</h4>
  
  <div class="container inner-bottom">
    <div class="row">
      <div class="col-md-4 col-sm-3 center-block text-center">
        <div class="authform">
          <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :role => 'form'}) do |f| %>
            <h3>Cambio de Password</h3>
            <p>Ingresar nuevo password / Enter new password</p>
            <%= devise_error_messages! %>
          	<%= f.hidden_field :reset_password_token %>
            <div class="form-group">
              <%= f.label :password, "Nuevo Password" %>
              <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control' %>
            </div>
             <%= f.submit 'Cambiar Password', :class => 'btn btn-large btn-green' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>