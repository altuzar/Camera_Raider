
<section id="portfolio">
  
  <h4>&nbsp;</h4>
  
  <div class="container inner-bottom">
    <div class="row">
      <div class="col-md-4 col-sm-3 center-block text-center">

        <div class="authform">
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
            <h3>Login</h3>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%- if devise_mapping.registerable? %>
                <%= link_to 'Registrar / Register', new_registration_path(resource_name), class: 'right'  %>
              <% end -%>
              <%= f.label :email %>
              <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%- if devise_mapping.recoverable? %>
                <%= link_to "Â¿No Password?", new_password_path(resource_name), class: 'right' %>
              <% end -%>
              <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
              <%= f.submit 'Login', :class => 'btn btn-large btn-green' %>
              <% if devise_mapping.rememberable? -%>
                <div class="checkbox">
                  <%= f.check_box :remember_me %> <%= f.label :remember_me, "Recordarme" %>
                </div>
              <% end -%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
