    <div class="yamm">
      <div class="sticky-wrapper"><div style="height: 112px;"><div style="padding-top: 0px; padding-bottom: 0px; box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.1);" data-300="padding-top: 0;padding-bottom: 0;-webkit-box-shadow: 0 10px 10px rgba(0,0,0,0.1);   -moz-box-shadow: 0 10px 10px rgba(0,0,0,0.1);box-shadow: 0 10px 10px rgba(0,0,0,0.1);" data-40="padding-top: 30px;padding-bottom: 30px;-webkit-box-shadow: 0 10px 10px rgba(0,0,0,0);   -moz-box-shadow: 0 10px 10px rgba(0,0,0,0.0);box-shadow: 0 10px 10px rgba(0,0,0,0);" class="navbar-collapse collapse skrollable stuck skrollable-after">
